@using UserOperation.Services.Dtos
@using UserOperation.Data.Entities
@model StabilityViewModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Stability

            </h2>
        </div>

        <div class="mb-3">
            <label asp-for="Employee.EmployeeId"></label>
            <input asp-for="Employee.EmployeeId" class="form-control" />
            <span asp-validation-for="Employee.EmployeeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.EmployeeName"></label>
            <input asp-for="Employee.EmployeeName" class="form-control" />
            <span asp-validation-for="Employee.EmployeeName" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <label asp-for="Employee.ProjectsIds"></label>
            <select asp-for="Employee.ProjectsIds" class="form-control project-select multiple-select" asp-items="ViewBag.Projects" multiple="multiple">
            </select>
            <span asp-validation-for="Employee.ProjectsIds" class="text-danger"></span>
        </div>
        <div class="d-flex mb-3">
            <div class="d-flex flex-column w-100">
                <label class="control-label" asp-for="Employee.Position.PositionId"></label>
                <select asp-for="Employee.Position.PositionId" class="form-control place-position" asp-items="ViewBag.Positions">
                    <option></option>
                </select>
                <span asp-validation-for="Employee.Position.PositionId" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column w-100">
                <label class="control-label" asp-for="Employee.Level.LevelId"></label>
                <select asp-for="Employee.Level.LevelId" class="form-control place-level" asp-items="ViewBag.Levels">
                    <option></option>
                </select>
                <span asp-validation-for="Employee.Level.LevelId" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex mb-3">
            <div class="d-flex flex-column w-100">
                <label class="control-label" asp-for="StabilityMonth"></label>
                <select asp-for="StabilityMonth" class="form-control place-month" asp-items="ViewBag.Months">
                    <option></option>
                </select>
                <span asp-validation-for="StabilityMonth" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column w-100">
                <label class="control-label" asp-for="LeavingYear"></label>
                <input placeholder="Select a leaving year" asp-for="LeavingYear" class="form-control " id="datepicker" />
                <span asp-validation-for="LeavingYear" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex mb-3">
            <div class="d-flex flex-column w-100">
                <label class="control-label" asp-for="StabilityLevel.StabilityLevelID"></label>
                <select asp-for="StabilityLevel.StabilityLevelID" class="form-control place-stalevel" asp-items="ViewBag.StabilityLevels">
                    <option></option>
                </select>
                <span asp-validation-for="StabilityLevel.StabilityLevelID" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column w-100 ">
                <label class="control-label" asp-for="Criticality.CriticalityID"></label>
                <select asp-for="Criticality.CriticalityID" class="form-control place-crit" asp-items="ViewBag.Criticalities">
                    <option></option>
                </select>
                <span asp-validation-for="Criticality.CriticalityID" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary " style="width:150px">Update</button>
        <a asp-controller="Stability" asp-action="Index" class="btn btn-secondary " style="width:150px">Back to List</a>
        @Html.HiddenFor(x=>x.StabilityId)
    </div>
</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}